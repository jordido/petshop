<h1><%= @user.name%>'s Pets</h1>
<%= link_to "Edit user", edit_user_path(@user) %>
<%= link_to "New pet", new_pet_path %>

<table class="tab_title">
	<th>Pet</th>
	<th>Type</th>
	<th>Actions</th>
	<% @user.pets.each do |pet| %>
		<tr>
			<td><%= link_to pet.name, pet_path(pet) %></td>
			<td><% pet.animal.name %></td>
			<td>	<%= link_to "Edit", edit_pet_path(pet) %>
				<%= link_to "Delete", pet_path(pet), method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
		</tr>

	<% end %>
	</br>
	<%= @user.id.to_s %> ------ <%= current_user.name %>
	</br>
</table>

</br>
<%= link_to "Back", users_path %>